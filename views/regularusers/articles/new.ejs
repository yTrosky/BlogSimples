<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/regularnavbar.ejs') %>

<div class="container">
    <hr>
    <div class="card"> 
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/regulararticles/save">
                <input class="form-control" type="text" name="title" placeholder="Defina o tÃ­tulo do artigo"><br>
                <textarea class="form-control" placeholder="Escreva o artigo aqui!" name="body" id="regulararticle"></textarea><br>
                <label>Categoria</label>
                <select name="regularcategory" class="form-control">
                    <% regularcategories.forEach((regularcategory) => { %>
                        <option value="<%= regularcategory.id %>"><%= regularcategory.title %></option>
                    <% }) %>
                </select>
                <br>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

<%- include ('../../partials/footer.ejs') %>

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: "#regulararticle",
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })

</script>