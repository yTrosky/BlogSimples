<%- include ('../../partials/header.ejs') %>
    <%- include ('../../partials/regularnavbar.ejs') %>
        <div class="container">
            <hr>
            <h2>Artigos</h2>
            <a class="btn btn-success" href="/regularusers/articles/new">Criar novo artigo</a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Título</th>
                        <th>Slug</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% regulararticles.forEach(regulararticle=> { %>
                        <tr>
                            <td>
                                <%= regulararticle.id %>
                            </td>
                            <td>
                                <%= regulararticle.title %>
                            </td>
                            <td>
                                <%= regulararticle.slug %>
                            </td>
                            <td>
                                <%= regulararticle.regularcategory?.title || '' %>
                            </td>
                            <td>
                                <a href="/regularusers/articles/edit/<%= regulararticle.id %>"
                                    class="btn btn-warning">Editar</a>
                                <form method="POST" action="/regulararticles/delete" style="display: inline;"
                                    onsubmit="confirmarDelecao(event, this)">
                                    <input type="hidden" name="id" value="<%= regulararticle.id %>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <%- include ('../../partials/footer.ejs') %>
            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    var decision = confirm("Você quer deletar este artigo?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>