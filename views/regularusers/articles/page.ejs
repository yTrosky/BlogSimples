<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/regularnavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <% result.regulararticles.rows.forEach(regulararticle => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= regulararticle.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= regulararticle.slug %>" class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %>

        
        <div class="row">
            <div class="col col-12">

                <% if(result.page > 2) {%>
                    <a style="float:left" href="/regulararticles/page/<%= result.page - 1 %>"> <<< Prev</a>
                <% } else if(result.page == 2) { %>
                    <a style="float:left" href="/"> <<< Prev</a>
                <% } %>


                <% if(result.next)  {%>
                    <a style="float:right" href="/regulararticles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
            </div>
            <hr>
        </div>
        <hr>


    </div>
</body>
<%- include ('../../partials/footer.ejs') %>